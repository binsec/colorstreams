(**storage units representing memory locations, registers and custom variables*)

type t =
    | Memory of Address.t * int
    | Register of string * int
    | Custom of string * int * Z.t

val size : t -> int

val pp : t -> string

val compare : t -> t -> int

val value_interval : t -> Interval.t
(**interval of values a storage can take*)

val memory_interval : t -> Interval.t
(**for memory locations: corresponding address range*)
